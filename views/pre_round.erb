<h4>Hi <%=session[:player_name]%>, You have <%=session[:player_chips]%> chips.</h4>
<h5>Place a bet to start a new round</h5>

<form class="form-horizontal" action='/begin_round' method='post'>
  <div class="control-group">
    <label class="control-label">Bet</label>
    <div class="controls">
      <%session[:player_bet] = session[:player_chips] if session[:player_bet] > session[:player_chips]%>
      <input type="text" name="player_bet" value="<%=session[:player_bet]%>"> chips
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn">Deal!</button>
    </div>
  </div>

</form>
